<%- include('./partials/header') -%>




<div class="blogs-container">
 <% let i = 1 %>
<% displayBlogs.forEach(function(blog){ %>
  <% if(i %2 == 0){ %>
    <div class="blog" data-aos="fade-left">
    <% } else { %>
    <div class="blog" data-aos="fade-right">
   <% } %>
    <% i = i + 1 %>
      <div class="blog-container">
        <div class="blogTitle">
          <h2><%= blog.title %></h2>
        </div>
        <hr />
        <div class="blogIntro">
          <h3>Introduction:</h3>
          <p><%= blog.intro.substring(0, 120) + "..." %></p>
        </div>
        <hr />
        <div class="blogBody">
          <h3>Body:</h3>
          <p><%= blog.body1 + "..." %> 
          <a href="/blogs/<%= blog._id %>">Read More</a></p>
          <!-- <p><%= blog.body2 %></p>
          <p><%= blog.body3 %></p> -->
        </div>
        <!-- <div class="blogConclusion">
          <h3>Conclusion:</h3>
          <p><%= blog.conclusion %></p>
        </div> -->
      </div>
    </div>
<% }) %>
  </div>
  <%- include('./partials/footer') -%>
  <script src="/js/first.js"></script>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    AOS.init({
      duration: 700,
      once: true,
      offset: 200
    });
  </script>
</body>

