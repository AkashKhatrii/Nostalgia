<%- include('./partials/header') -%>

<form action="/userBlog" method="POST" class="memform" enctype="multipart/form-data">
    <div class="form-container">
<div class="form-component">
    <label>Title:</label>
    <input type="text" class="form-control" name="blogTitle" autocomplete="off">
</div>
<div class="form-component">
    <label>Intro: </label>
    <textarea name="blogIntro" rows="6" cols="15"></textarea>
</div>
<div class="form-component">
    <label>Main Content:</label>
    <textarea name="blogBody1" class="f-blogBody" rows="7" cols="15" ></textarea>
    <textarea name="blogBody2" class="f-blogBody" rows="7" cols="15" ></textarea>
    <textarea name="blogBody3" class="f-blogBody" rows="7" cols="15" ></textarea>

</div>
<div class="form-component">
    <label>Conclusion: </label>
    <textarea name="blogConclusion" rows="6" cols="15"></textarea>
</div>

<!-- <div class="form-component image-input">
    <label>Insert image(if any):</label>
    <input type="file" class="form-control" name="blogImage" accept="image/*">
</div> -->

<button type="submit" name="button" class="btn">Publish</button>
</div>

</form>
<%- include('./partials/footer') -%>
<script src="/js/first.js"></script>
</body>

